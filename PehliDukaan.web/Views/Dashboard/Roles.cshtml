@model PehliDukaan.web.Models.ViewModels.RolesListingViewModel

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<section class="flat-row flat-iconbox">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-section">
                    <h2 class="title">
                        Roles
                    </h2>
                </div>
            </div>
        </div>

        <div id="tableContiner">


            <form method="post">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Search</label>
                            <input class="form-control" id="searchTxt" name="searchTerm" value="@Model.SearchTerm" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Action</label>
                            <div class="row">
                                <div class="col-md-5 pr-0">
                                    <button class="btn btn-primary form-control" type="submit" id="searchBtn">Search</button>
                                </div>
                                <div class="col-md-5 pr-0">
                                    <a class="btn btn-primary form-control" type="button" id="resetBtn" href="@Url.Action("Roles", "Dashboard")">Reset</a>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </form>



            <div class="col-lg-12 m-0 p-0" id="UserListing">
                @{ Html.RenderAction("RolesListing");}
            </div>


        </div>

        <hr />
    </div>
</section>


<script>
    function focusAction(controlToFocus) {
        $('html, body').animate({
            scrollTop: $("#" + controlToFocus).offset().top - 100
        }, 1000);
    }
</script>