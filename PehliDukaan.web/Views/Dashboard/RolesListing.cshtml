
@model PehliDukaan.web.Models.ViewModels.RolesListingViewModel



<table class="table table-striped">
    <thead class="bg-secondary text-white">
        <tr>
            <th class="font-weight-bold">ID</th>
            <th class="font-weight-bold">Roles</th>
            <th class="font-weight-bold">Users</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Roles != null && Model.Roles.Count > 0) {

            foreach (var role in Model.Roles) {
                <tr>
                    <input type="hidden" value="@role.Id" />
                    <td>@role.Id</td>
                    <td>
                        @role.Name
                    </td>
                    <td>@role.Users.Count</td>
                   
                </tr>
            }
        }
        else {
            <tr>
                <td class="text-danger" colspan="12">No Results Found.</td>
            </tr>
        }
    </tbody>
</table>

